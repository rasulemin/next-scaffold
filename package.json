{
    "name": "next-scaffold",
    "version": "1.0.0",
    "description": "A scaffolding tool for Next.js",
    "type": "module",
    "main": "./dist/index.js",
    "bin": {
        "next-scaffold": "./dist/index.js"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsup",
        "prepublishOnly": "pnpm build",
        "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,md}\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rasulemin/next-scaffold.git"
    },
    "keywords": [
        "nextjs",
        "scaffold",
        "cli",
        "setup"
    ],
    "author": "Rasul Emin",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rasulemin/next-scaffold/issues"
    },
    "homepage": "https://github.com/rasulemin/next-scaffold#readme",
    "devDependencies": {
        "prettier": "^3.7.4",
        "tsup": "^8.5.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "commander": "^14.0.2"
    }
}
